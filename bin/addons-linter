#!/usr/bin/env node

var path = require('path');

var absoluteAppRoot = path.resolve(path.join(__dirname, '..'));
global.appRoot = path.relative(process.cwd(), absoluteAppRoot);
try{
    require('../dist/addons-linter')
    .createInstance({runAsBinary: true})
    .run();
}
catch (e) {
    if (e.code == 'MODULE_NOT_FOUND') {
       console.log('You did not build addons-linter yet. Please run \'npm install\' and \'yarn build\' or see README.md for more information');
    }
}
